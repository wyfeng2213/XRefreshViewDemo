<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="展示几种常见的显示方式" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="(更多组合方式可自行组合)"
                android:textColor="@color/colorAccent" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sCenterBottomTextColor="@color/colorAccent"
                stv:sCenterBottomTextString="限额说明>>"
                stv:sCenterTopTextString=" "
                stv:sCenterViewGravity="left_center"
                stv:sLeftBottomTextString="招商银行（8888）"
                stv:sLeftIconRes="@drawable/bank_zhao_shang"
                stv:sLeftTopTextString="银行卡支付"
                stv:sLeftViewGravity="left_center"
                stv:sRightCheckBoxRes="@drawable/circular_check_bg"
                stv:sRightViewType="checkbox" />

            <com.allen.library.SuperTextView
                android:id="@+id/superTextView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextColor="@color/colorAccent"
                stv:sLeftBottomTextString="限额说明>>"
                stv:sLeftIconRes="@drawable/not_bank_card_icon"
                stv:sLeftTopTextString="银行卡支付"

                stv:sLeftViewGravity="left_center"
                stv:sRightCheckBoxRes="@drawable/circular_check_bg" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sLeftBottomTextString="188****8888"
                stv:sLeftIconRes="@drawable/head_default"
                stv:sLeftTopTextString="张三"
                stv:sLeftViewGravity="left_center" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftTopTextString="迪丽热巴"
                stv:sLeftViewGravity="left_center"
                stv:sRightIconRes="@drawable/arrow_right_red"
                stv:sRightTvDrawableRight="@drawable/head_default" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sLeftTopTextString="推送通知"
                stv:sLeftViewGravity="left_center"
                stv:sRightViewType="switchBtn" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="声音"
                stv:sRightViewType="switchBtn"
                stv:sSwitchIsChecked="true"
                stv:sSwitchMinWidth="40dp"
                stv:sThumbResource="@drawable/thumb"
                stv:sTrackResource="@drawable/track" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconRes="@drawable/question"
                stv:sLeftTextString="常见问题" />

            <com.allen.library.SuperTextView
                android:id="@+id/tv_yinhangka"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconRes="@drawable/my_bankcard"
                stv:sLeftTextString="我的银行卡"
                stv:sRightTextString="1232131231231213213212313132123112121231123123123123"
                stv:sRightLines="4"
                stv:sRightMaxEms="100"
                stv:sRightViewMarginLeft="100dp"
                stv:sRightViewGravity="right_center"
                stv:sRightTextColor="@color/colorAccent" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="设置中心"
                stv:sRightIconRes="@drawable/arrow_right_red" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextSize="14dip"
                stv:sLeftTextString="客服热线"
                stv:sRightIconRes="@drawable/arrow_right_red"
                stv:sRightTextColor="#ff0000"
                stv:sRightTextSize="12dp"
                stv:sRightTextString="4006179999" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="账号与安全"
                stv:sRightIconRes="@drawable/arrow_right_red"
                stv:sRightTextString="已保护"
                stv:sRightTvDrawableLeft="@drawable/v1" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sCenterTextString="88.88元"
                stv:sLeftTextString="2016-10-18"
                stv:sRightTextString="正常" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="年化率"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="13.8%" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftIconHeight="25dp"
                stv:sLeftIconRes="@drawable/ic_hint_music"
                stv:sLeftIconWidth="25dp"
                stv:sLeftTextString="自定义图片大小"
                stv:sRightTextString="宽高20dp" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sBackgroundDrawableRes="@drawable/selector_red"
                stv:sLeftTextString="自定义背景点击效果"
                stv:sRightIconRes="@drawable/arrow_right_red" />

            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                stv:sCenterBottomTextColor="@color/colorAccent"
                stv:sCenterBottomTextString="中下"
                stv:sCenterTextColor="@color/colorAccent"
                stv:sCenterTextString="中"
                stv:sCenterTopTextColor="@color/colorAccent"
                stv:sCenterTopTextString="中上"
                stv:sLeftBottomTextColor="@color/colorAccent"
                stv:sLeftBottomTextString="左下"
                stv:sLeftTextColor="@color/colorAccent"
                stv:sLeftTextString="左中文字12231231231232312312"
                stv:sLeftTopTextColor="@color/colorAccent"
                stv:sLeftTopTextString="左上"
                stv:sRightBottomTextColor="@color/colorAccent"
                stv:sRightBottomTextString="右"
                stv:sRightTextColor="@color/colorAccent"
                stv:sRightTextString="右中"
                stv:sRightTopTextColor="@color/colorAccent"
                stv:sRightTopTextString="右" />


            <com.allen.library.SuperTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                stv:sCenterBottomTextString="测试文字"
                stv:sCenterTopTextString="测试文字"
                stv:sCenterViewGravity="center"
                stv:sLeftBottomTextString="18888888888"
                stv:sLeftTopTextString="张三"
                stv:sLeftViewGravity="left_center"
                stv:sRightBottomTextString="15555555555"
                stv:sRightTopTextString="李四"
                stv:sRightViewGravity="right_center" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
